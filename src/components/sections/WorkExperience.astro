---

<div class="relative">
  <!-- Timeline line -->
  <div class="absolute left-0 top-0 h-full w-0.5 bg-[#00DC82]/20"></div>

  <div class="space-y-16">
    {workExperience.map((entry, index) => (
      <div class="relative pl-8 group">
        <!-- Timeline dot -->
        <div class="absolute left-[-4px] top-3 w-2 h-2 rounded-full bg-[#00DC82] group-hover:scale-150 transition-transform"></div>

        <div class="space-y-4 bg-[#1A1D24] p-8 rounded-lg transition-all duration-300 hover:scale-[1.02] hover:shadow-xl hover:shadow-[#00DC82]/10">
          <div class="flex justify-between items-start">
            <h2 class="text-2xl font-bold group-hover:text-[#00DC82] transition-colors">{entry.company}</h2>
            <span class="text-gray-400">{entry.period}</span>
          </div>
          <p class="text-gray-400">{entry.role}</p>
          <ul class="list-disc list-inside space-y-3 text-gray-300">
            {entry.achievements.map((achievement) => (
              <li set:html={achievement} />
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>
</div>